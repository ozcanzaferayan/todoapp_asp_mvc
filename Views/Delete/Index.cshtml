@model todoapp.Models.Todo

@{
    ViewBag.Title = "Delete Todo";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Ensure you have a layout with Bootstrap CSS included
}

<h2>Delete Todo</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Todo</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Title
        </dt>
        <dd>
            @Model.Title
        </dd>
        <dt>
            Description
        </dt>
        <dd>
            @Model.Description
        </dd>
        <dt>
            Is Complete
        </dt>
        <dd>
            @(Model.IsComplete ? "Yes" : "No")
        </dd>
    </dl>

    <form method="post" action="@Url.Action("Index", "Delete", new { id = Model.Id })">
        @Html.AntiForgeryToken()
        <input type="hidden" name="Id" value="@Model.Id" />

        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a href="@Url.Action("Index", "Home")">Back to List</a>
        </div>
    </form>
</div>
